---
export interface Props {
  title?: string;
  description?: string;
}

const {
  title = "E-K Fotos",
  description = "Leidenschaftlich, facettenreich, atmosph√§risch. Fotografie ist mehr als nur ein Foto.",
} = Astro.props;
---

<!DOCTYPE html>
<html lang="de">
  <head>
    <title>{title}</title>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.e-k-fotos.de " />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/screen.jpg" />

    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@stefan_e_k" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/android-chrome-192x192.png" />

    <link rel="icon" type="image/png" sizes="32x32" href="favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="favicon-16x16.png" />
  </head>
  <body>
    <slot />
  </body>
</html>
